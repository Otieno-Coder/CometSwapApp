# ============================================
# CometSwap Frontend - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# WalletConnect Project ID (required for RainbowKit)
# Get one at: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# RPC URLs (optional - falls back to public RPCs)
NEXT_PUBLIC_ALCHEMY_ID=your_alchemy_key
NEXT_PUBLIC_INFURA_ID=your_infura_key

# Network (1 = mainnet, 11155111 = sepolia)
NEXT_PUBLIC_CHAIN_ID=1
